@model Models.User
@{ 
     Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
<script type="text/javascript">
    $(document).ready(function () {
        $(":input[type='submit']").button();
    })
</script>
<div class="panel">
    @using (Html.BeginForm("UserCreate", "Admin", FormMethod.Post))
    {
        @Html.ValidationSummary(true)
        <fieldset>            
            <legend><strong> Create User</strong></legend>
            <br />
            <table style='width: 100%'>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.UserName, "UserName")
                    </td>
                    <td class='userTable'>
                        @Html.TextBoxFor(model => model.UserName, new { style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </td>
                </tr>

                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.FirstName, "Firstname")
                    </td>
                    <td class='userTable'>
                        @Html.TextBoxFor(model => model.FirstName, new { style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </td>
                </tr>

                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.LastName, "LastName")
                    </td>
                    <td class='userTable'>
                        @Html.TextBoxFor(model => model.LastName, new { style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.LastName)
                    </td>
                </tr>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.Password, "Password")
                    </td>
                    <td class='userTable'>
                        @Html.TextBoxFor(model => model.Password, new { style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </td>
                </tr>
                <tr>
                    <td style='width: 10%; font-weight: bold' class='userTable'>
                        @Html.LabelFor(model => model.EMail, "Email")
                    </td>
                    <td class='userTable'>
                        @Html.TextBoxFor(model => model.EMail, new { style = "width:250px" })
                        @Html.ValidationMessageFor(model => model.EMail)
                    </td>
                </tr>
            </table>
            <br />
            <input type="submit" value="Create" />
        </fieldset>
    }
</div>
<div>
    @Html.ActionLink("Go to Users", "Index", "Admin")
</div>
