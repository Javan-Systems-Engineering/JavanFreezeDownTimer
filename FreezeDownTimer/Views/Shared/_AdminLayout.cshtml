@using System.Web.Optimization
@using FreezeDownTimer.Filters;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FreezeDown Timer</title>
    @*<link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" id="bsAdmin"/>*@
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />

    <!-- jQuery UI Theme -->
    <link href="@Url.Content("~/Content/themes/ui-lightness/jquery-ui-1.10.3.min.css")" rel="stylesheet" type="text/css" />


    @Scripts.Render("~/bundles/modernizr")


    <!-- JQuery Library References -->
    @*<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery-3.5.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.10.3.custom.min.js")" type="text/javascript"></script>
    @*<script src="~/Scripts/jquery-ui-1.12.1.js"></script>*@
    @*<script src="@Url.Content("~/Scripts/jquery-common.js")" type="text/javascript"></script>*@
    <script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

    <!-- jQuery UI Theme -->
    <link href="@Url.Content("~/Content/themes/ui-lightness/jquery-ui-1.10.3.min.css")" rel="stylesheet" type="text/css" />

    @*<script src="~/Scripts/bootstrap.min.js"></script>*@

</head>
<body>
    <div class="page">
        <br />
        <br />
        <div class="raisedbox">
            <br />
            <br />
            <table class="tblHeader">
                <tr>
                    <td class="tdHeader">
                        <div id="header" class="gradientClass" style="margin-left:20px">
                            @*<img src="@Url.Content("~/Content/Images/padlock.jpg")" alt="logo" style="vertical-align:top; margin-top: 0px; margin-bottom: 0px" />*@
                            <font style="font-size: 32px;vertical-align:middle"><strong>Freeze Down Timer</strong></font><br />
                            @*<font style="font-size: 12px">Current User: @User.Identity.Name</font>*@
                        </div>
                    </td>
                    <td class="tdHeaderRight">
                        <img src="@Url.Content("~/Content/Images/AZLogo_burned.png")" alt="logo" style="vertical-align:top; margin-top: 0px; margin-bottom: 0px; margin-right:20px" />
                    </td>
                </tr>
            </table>
            <br />
            <br />
        </div>
        <br />
        <br />
        <div id="menucontainer">
            <ul class="menuTemplate3 decor3_1">
                @{ if (User.Identity.IsAuthenticated)
                    {
                        if (ViewContext.Controller.IsSysAdmin())
                        {
                            <li>@Html.ActionLink("Home", "Index", "Timer")</li>
                            @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>*@

                            <li>
                                <a href="#" class="arrow">System Administration</a>
                                <div class="drop decor3_2 dropToLeft" style="width: 160px;">
                                    <div class='right'>
                                        <a href="/Admin/Index">Users</a><br />
                                        <a href="/Admin/RoleIndex">Roles</a><br />
                                        <a href="/Admin/PermissionIndex">Permissions</a><br />
                                        <a href="/Admin/GetTimerList">Timers</a><br />
                                    </div>
                                </div>
                            </li>
                        }
                        if (ViewContext.Controller.IsSysAdmin() || ViewContext.Controller.HasRole("Manager"))
                        {

                            <li>
                                <a href="#" class="arrow">Reports</a>
                                <div class="drop decor3_2 dropToLeft" style="width: 160px;">
                                    <div class='right'>
                                        <a href="/Report/AuditReport">Audit Report</a><br />
                                    </div>
                                </div>
                            </li>
                        }
                        <li>
                            <a href="#" class="arrow">@User.Identity.Name</a>
                            <div class="drop decor3_2 dropToLeft" style="width: 160px;">
                                <div class='right'>
                                    <a href="/Home/Logout">Logout</a><br />
                                </div>
                            </div>
                        </li>
                        <li><a href="/Admin2/Users">Test Admin Page</a></li>

                    }
                    else
                    {
                        <li><a href="#"></a></li>

                    }
                }
            </ul>
        </div>
    </div>
    <div class="container body-content">
        @RenderSection("scripts", false)
        @RenderBody()
    </div>

</body>
</html>
